<Page x:Class="PR29_Degtinnikov.Pages.Users.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR29_Degtinnikov.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Click="Clubs" Height="26" Content="Добавить" VerticalAlignment="Top" Margin="4,8,5,0" 
     Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
        <Button Click="Users" Height="25" Content="Пользователь" VerticalAlignment="Top" Margin="4,8,582,0" 
     Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White" Grid.Column="1"/>
        <Grid Grid.Column="0" Margin="0,54,0,0">
            <Image Height="71" VerticalAlignment="Top" Margin="5,18,6,0" Source="/Images/users_CompClub.png"/>
            <Button x:Name="BthAdd" Click="AddUser" Height="25" Content="Добавить" VerticalAlignment="Top" Margin="10,95,10,0" 
                Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
        </Grid>

        <Grid Grid.Column="1" Margin="0,54,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Дата аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12,2,0,0"/>
            <Label Content="Время аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,53,0,0" Width="89"/>
            <TextBox x:Name="RentTime"  VerticalAlignment="Top" Margin="11,79,9,0" Height="25" 
                 VerticalContentAlignment="Center" />

            <Label Content="Продолжительность:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="9,1,0,0" Grid.Column="1" Height="27" Width="133"/>
            <TextBox x:Name="Duration"  VerticalAlignment="Top" Margin="8,27,12,0" Height="25" 
                 VerticalContentAlignment="Center" Grid.Column="1" />
            <DatePicker x:Name="RentStart" HorizontalAlignment="Left" Margin="12,28,0,0" VerticalAlignment="Top" Width="134"/>
            <Label Grid.Column="1" Content="Клуб:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="FIO"  HorizontalAlignment="Left" Margin="11,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="656" Grid.ColumnSpan="2" Height="23"/>
            <TextBlock HorizontalAlignment="Left" Margin="13,111,0,0" TextWrapping="Wrap" Text="Фамилия Имя и Отчество" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="283"/>
            <ComboBox x:Name="Clubs" Grid.Column="1" HorizontalAlignment="Left" Margin="9,80,0,0" VerticalAlignment="Top" Width="319" Height="24"/>
        </Grid>
    </Grid>
</Page>
