<Page x:Class="PR29_Degtinnikov.Pages.Users.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR29_Degtinnikov.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Margin="20" Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="186*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Name="Parent"/>
        </ScrollViewer>
        <Button
        x:Name="Button"
        Click="AddUser"
        Height="26"
        Content="Добавить"
        VerticalAlignment="Center"
        Margin="632,0,0,0"
        HorizontalAlignment="Left"
        Width="100"
        Background="#FF46FD00"
        BorderBrush="#FF46FD00"
        Foreground="White" Grid.Row="1"/>
    </Grid>
</Page>
