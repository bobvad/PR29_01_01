<UserControl x:Class="PR29_Degtinnikov.Pages.Users.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PR29_Degtinnikov.Pages.Users.Elements"
             mc:Ignorable="d" Width="428" >
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Height="71" VerticalAlignment="Top" Margin="5,18,6,0" Source="/Images/users_CompClub.png"/>
            <Button Click="EditClub" Height="25" Content="Изменить" VerticalAlignment="Top" Margin="10,95,10,0" 
                 Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
            <Button Click="DeleteClub" Height="25" Content="Удалить" VerticalAlignment="Top" Margin="10,125,10,10" 
                 Background="#FFCD1E1E" BorderBrush="#FFCD1E1E" Foreground="White"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Дата аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12,2,0,0"/>
            <Label Content="Время аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,53,0,0" Width="89"/>
            <TextBox x:Name="RentTime" Text="Адрес" VerticalAlignment="Top" Margin="11,79,9,0" Height="25" 
                  VerticalContentAlignment="Center" IsEnabled="False"/>

            <Label Content="Продолжительность:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="9,1,0,0" Grid.Column="1" Height="27" Width="133"/>
            <TextBox x:Name="Duration" Text="Время работы" VerticalAlignment="Top" Margin="8,27,12,0" Height="25" 
                  VerticalContentAlignment="Center" Grid.Column="1" IsEnabled="False"/>
            <DatePicker x:Name="RentStart" IsEnabled="False" HorizontalAlignment="Left" Margin="12,28,0,0" VerticalAlignment="Top" Width="134"/>
            <TextBox x:Name="Club" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="9,81,0,0" TextWrapping="Wrap" Text="Клуб" VerticalAlignment="Top" Width="133" Height="22"/>
            <Label Grid.Column="1" Content="Клуб:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="FIO" IsEnabled="False" HorizontalAlignment="Left" Margin="11,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="285" Grid.ColumnSpan="2" Height="23"/>
            <TextBlock HorizontalAlignment="Left" Margin="13,111,0,0" TextWrapping="Wrap" Text="Фамилия Имя и Отчество" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="283"/>
        </Grid>
    </Grid>
</UserControl>
