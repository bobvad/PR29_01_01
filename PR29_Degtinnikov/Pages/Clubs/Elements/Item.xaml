<UserControl x:Class="PR29_Degtinnikov.Pages.Clubs.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PR29_Degtinnikov.Pages.Clubs.Elements"
             mc:Ignorable="d" >
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Width="88" Height="55" VerticalAlignment="Top" Margin="6,33,6,0" Source="/Images/ic_comp.jpg"/>
            <Button Click="EditClub" Height="25" Content="Изменить" VerticalAlignment="Top" Margin="10,95,10,0" 
                    Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
            <Button Click="DeleteClub" Height="25" Content="Удалить" VerticalAlignment="Top" Margin="10,125,10,10" 
                    Background="#FFCD1E1E" BorderBrush="#FFCD1E1E" Foreground="White"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Наименование:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="11,23,0,0"/>
            <TextBox x:Name="Name" Text="Наименование" VerticalAlignment="Top" Margin="10,50,10,0" Height="25" 
                     VerticalContentAlignment="Center" IsEnabled="False"/>
            <Label Content="Адрес" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="11,80,0,0" Width="107"/>
            <TextBox x:Name="Address" Text="Адрес" VerticalAlignment="Top" Margin="10,106,10,0" Height="25" 
                     VerticalContentAlignment="Center" IsEnabled="False"/>

            <Label Content="Время работы:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="11,23,0,0" Grid.Column="1"/>
            <TextBox x:Name="WorkTime" Text="Время работы" VerticalAlignment="Top" Margin="10,50,10,0" Height="81" 
                     VerticalContentAlignment="Center" Grid.Column="1" IsEnabled="False"/>
        </Grid>
    </Grid>
</UserControl>
